<p id="notice"><%= notice %></p>

<h1>Gambles</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gambles.each do |gamble| %>
      <tr>
        <td><%= gamble.id %> </td>
        <td><%= gamble.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% @gambles.create( amount:24) %>
